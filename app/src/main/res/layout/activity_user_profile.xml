<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFragment"
    tools:context="com.example.hristijan.tabs2.UserProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayout2">

                <ImageView
                    android:background="@color/colorPrimaryDark"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:id="@+id/teacher_blur"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/relativeLayout">

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:civ_border="true"
                        app:civ_border_width="2dp"
                        android:id="@+id/user_pp"
                        android:src="@drawable/gjorgji_madzarov"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="д-р Ѓорѓи Маџаров"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:id="@+id/personName"
                        android:layout_below="@+id/user_pp"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="gjorgji.madjarov@finki.ukim.mk"
                        android:id="@+id/personEmail"
                        android:textColor="@color/title"
                        android:layout_below="@+id/personName"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>


            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/colorPrimaryDark"
                android:text="Резиме"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:id="@+id/textView9"
                android:layout_below="@+id/relativeLayout2"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_margin="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Роден е 1984 година во Велес. Дипломирал на Факултетот за електротехника и информациски технологии во Скопје во 2007 година, на насоката компјутерска техника, информатика и автоматика со просек 10.00, како најдобар во својата генерација. Добитник е на наградата „Златник“ од Универзитетот „Свети Кирил и Методиј“ и „Златен прстен“ од организацијата на инженерите на Македонија. Во 2009-та година ја одбранил магистерската тема и се стекнал со научното звање магистер на електротехнички науки област компјутерска техника и информатика. Докторската дисертација ја одбранил во 2012-та година под менторство на проф. Дејан Ѓорѓевиќ и коменторство на проф. Сашо Џероски на Факултетот за информатички науки и компјутерско инженерство. Своето прво работно искуство го стекнал во Друштвото за компјутерски услуги „Netcetera“ - Скопје, во одделот за софтвер и веб развој. Во рамките на досегашната научно-истражувачка работа, учествувал во изработката на повеќе научни и стручни трудови објавени на домашни и меѓународни конференции и списанија. Полињата на неговиот научно-истражувачки интерес вклучуваат: препознавање на облици, машинско учење и софтверско инженерство."
                android:id="@+id/personResume"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/black"
                android:layout_below="@+id/textView9"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/sendEmailButton"
        app:backgroundTint="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/email" />

</android.support.design.widget.CoordinatorLayout>
