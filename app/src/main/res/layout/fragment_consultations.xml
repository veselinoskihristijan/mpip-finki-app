<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorFragment"
    android:orientation="horizontal">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">


            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/teacherImage"
                android:src="@drawable/gjorgji_madzarov"
                app:civ_border="true"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/colorFragment" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/teacherImage"
                android:layout_toEndOf="@+id/teacherImage"
                android:id="@+id/linearLayout">


                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:text="Маџаров д-р Ѓорѓи"
                        android:textColor="@color/vezbi"
                        android:textStyle="bold"
                        android:gravity="center_vertical"
                        android:id="@+id/teacherName" />


                    <!--    android:src="@drawable/ic_offline_24dp" -->

                    <ImageView
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:src="@drawable/ic_more_vert_black_24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/subjectsIcon"
                        android:layout_alignBottom="@+id/teacherName"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />


                </RelativeLayout>


                <LinearLayout
                    android:layout_margin="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_gravity="fill"
                        android:layout_columnWeight="1">

                        <ImageView
                            android:src="@drawable/home_loc"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:id="@+id/location_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Барака 3.2"
                            android:textColor="#000"
                            android:id="@+id/cons_location"
                            android:textSize="@dimen/location_and_time"
                            android:layout_marginLeft="5dp"
                            android:layout_alignParentTop="true"
                            android:layout_toRightOf="@+id/icon_location"
                            android:layout_toEndOf="@+id/icon_location" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_gravity="fill"
                    android:layout_columnWeight="1">

                    <ImageView
                        android:src="@drawable/clock_time"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:id="@+id/time_end" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15:00 - 16:45"
                        android:textColor="#000"
                        android:textSize="@dimen/location_and_time"
                        android:id="@+id/cons_time"
                        android:layout_marginLeft="5dp"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/icon_time"
                        android:layout_toEndOf="@+id/icon_time" />

                </LinearLayout>




            </LinearLayout>


        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>
