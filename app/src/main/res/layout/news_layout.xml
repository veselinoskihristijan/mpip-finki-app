<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/colorFragment">


    <ImageView
        android:layout_margin="5dp"
        android:src="@drawable/language_networks"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/news_image"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_marginBottom="5dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Вработување во Inside Developmеnt"
        android:maxLines="2"
        android:ellipsize="end"
        android:id="@+id/news_title"
        android:layout_alignTop="@+id/news_image"
        android:layout_toRightOf="@+id/news_image"
        android:layout_toEndOf="@+id/news_image" />

    <TextView
        android:layout_marginBottom="10dp"
        android:padding="2dp"
        android:textColor="#fff"
        android:background="@drawable/event_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Пракса"
        android:id="@+id/news_type"
        android:layout_below="@+id/news_title"
        android:layout_alignLeft="@+id/news_title" />


</RelativeLayout>
